# Configuration de l'environnement AgriSmart CI

# Serveur
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Base de données PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=agrismart_ci
DB_USER=agrismart
DB_PASSWORD=votre_mot_de_passe_securise
DB_SSL=false

# JWT Authentication
JWT_SECRET=votre_cle_secrete_jwt_tres_longue_et_securisee_2024
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OTP Configuration
OTP_EXPIRES_MINUTES=10
OTP_LENGTH=6

# Twilio (SMS/WhatsApp)
TWILIO_ACCOUNT_SID=votre_account_sid
TWILIO_AUTH_TOKEN=votre_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre_email@gmail.com
SMTP_PASSWORD=votre_mot_de_passe_app
EMAIL_FROM=AgriSmart CI <noreply@agrismart.ci>

# API Météo (SODEXAM ou autre)
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
WEATHER_API_KEY=votre_cle_api_meteo

# Stockage fichiers (images maladies)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# IoT Gateway
IOT_GATEWAY_SECRET=cle_secrete_passerelle_iot
LORA_NETWORK_KEY=cle_reseau_lorawan

# Logs
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:8080

# Encryption
ENCRYPTION_KEY=cle_chiffrement_aes_256_bits_32_caracteres
